{
  "extends": "@medi-map/tsconfig",

  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "incremental": false,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}